<?xml version="1.0" encoding="utf-8"?>
<openerp>
<data>
    
    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">res.partner.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <notebook position="inside">
                <page string="3rd Party Supplier">
                    <label for="repord_3p_supplier"/>
                    <field name="repord_3p_supplier"/>
                    <field name="repord_3p_category_ids" widget="many2many_tags"/>
                    <field name="repord_3p_partner_pricelist_ids" context="{'default_partner_id': id}">
                        <field name="seller_id"/>
                        <field name="pricelist_id"/>
                    </field>
                </page>
            </notebook>
        </field>
    </record>
    
    <record id="view_rep_order_form" model="ir.ui.view">
        <field name="name">rep.order.form.3p.inherit</field>
        <field name="model">rep.order</field>
        <field name="inherit_id" ref="crm_repord.view_order_form"/>
        <field name="arch" type="xml">
            <field name="order_type" position="after">
                <field name="third_party_supplier" attrs="{'invisible': [('order_type', 'not in', ['3rd_party'])]}"/>
            </field>
        </field>
    </record>
    
    <record id="view_product_pricelist_form" model="ir.ui.view">
        <field name="name">product.pricelist.form.3p.inherit</field>
        <field name="model">product.pricelist</field>
        <field name="inherit_id" ref="product.product_pricelist_view"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="repord_3p_partner_pricelist_id" context="{'default_pricelist_id': id}"/>
            </field>
        </field>
    </record>
    
    <record id="view_product_category_form" model="ir.ui.view">
        <field name="name">product.category.form.3p.inherit</field>
        <field name="model">product.category</field>
        <field name="inherit_id" ref="product.product_category_form_view"/>
        <field name="arch" type="xml">
            <field name="type" position="after">
                <field name="repord_3p_supplier"/>
            </field>
        </field>
    </record>
    
</data>
</openerp>
